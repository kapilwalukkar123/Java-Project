        <!--       Beans For Election Authority   -->
        <beans:bean id="votesr" class="com.yts.pro.service.VoterService">		
		<beans:property name="votemanager" ref="votemanager"></beans:property>
		</beans:bean>
		
		<beans:bean id="votemanager" class="com.yts.pro.manager.VoterManager">		
		<beans:property name="ivoterdao" ref="ivoterdao"></beans:property>
		</beans:bean>
		
		<beans:bean id="ivoterdao" class="com.yts.pro.dao.VoterDao">		
